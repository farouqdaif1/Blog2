<h1>List of all posts</h1>
<section class="posts">
<div class="person">
 <img src="<%= @user.photo%>" alt="User Avater" width="20%"/> 
 <h1> <%= @user.name %> </h1>
 <span>Number of posts: <%= @user.posts_counter || 0%></span>
 <p>
  <%= link_to "Create New post", new_user_post_path %>
</p>
</div>
<% @posts.each_with_index do |post, index|%>
<div class='post'>
    <div class="text">
    <h3>Post#<%=index+1%></h3>
    <h4><%=post.title%></h4>
    <p><%=post.text%></p>
    </div>
    <span>Comments: <%= post.comments_counter || 0 %> </span>
     <span>, Likes: <%= post.likes_counter|| 0 %>
    <div class="comments">
        <%  post.most_recent_comments.includes(:user).each do |comment|%>
            <p>
                 <%=comment.user.name %> :<%=comment.text  %> 
            </P>
        <%end%> 
    <div>
</div>
<%end%>
</section>
